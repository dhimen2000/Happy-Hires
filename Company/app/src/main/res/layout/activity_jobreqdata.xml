<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Jobreqdata"
    android:orientation="vertical">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Scrollview">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Profile_profilepic1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"

                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />



            <TextView
                android:id="@+id/std_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/Profile_profilepic1">
            </TextView>

            <TextView
                android:id="@+id/std_dob1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:textAlignment="center"
                android:textSize="25dp"
                android:focusable="false"
                android:layout_below="@+id/Profile_name1">
            </TextView>

            <TextView
                android:id="@+id/std_gender1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_below="@+id/Profile_Dob1">
            </TextView>

            <TextView
                android:id="@+id/std_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number"
                android:textAlignment="center"
                android:textSize="25dp"
                android:inputType="number"
                android:layout_below="@+id/Profile_Gender1">
            </TextView>

            <TextView
                android:id="@+id/std_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textAlignment="center"
                android:textSize="25dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:layout_below="@+id/Profile_number1">
            </TextView>

            <TextView
                android:id="@+id/std_email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_below="@+id/Profile_Address1">
            </TextView>

            <TextView
                android:text="Academic Details :-"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Profile_Address1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Details1"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_School1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="School"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_Board1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Board"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_Percentage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Percentage"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_Year1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Year Of Passing"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Higher Secondary Details1"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_School1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="School"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_Board1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Board"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_Percentage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Percentage"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_Year1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Year Of Passing"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graduation Details"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/std_Graduation_College1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="College"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Graduation_Branch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Branch"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Graduation_Enrollmentno1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enrollment Number"
                android:textSize="20dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 1"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem21"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 2"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year21"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem31"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 3"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year31"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem41"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 4"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year41"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem51"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 5"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year51"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem61"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 6"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year61"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem71"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 7"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year71"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem81"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 8"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year81"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/std_CheckResume1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="Check Resume"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:layout_weight="1">
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/std_Checkpdf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:text="Check Pdf"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="20dp">
                </Button>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/confirmjob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Confirm"
                        android:backgroundTint="#28A745"
                        android:textColor="#FFF"
                        android:textAllCaps="false"
                        android:layout_marginRight="5dp" />

                    <Button
                        android:id="@+id/canceljob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="#f44336"
                        android:textAllCaps="false"
                        android:text="Cancel"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>