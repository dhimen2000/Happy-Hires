<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Student_data_cardviewActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ecf0f1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Profile_profilepic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="Name:-"
    android:textSize="20dp"
    android:layout_weight="1">
</TextView>
    <TextView
        android:id="@+id/std_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Name"
                android:layout_weight="1"
                android:textSize="20dp">
    </TextView>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="D.O.B:-"
        android:textSize="20dp">

    </TextView>

            <TextView
                android:id="@+id/std_dob"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Date of Birth"
                android:layout_weight="1"
                 android:textSize="20dp">
            </TextView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gender:-"
            android:textSize="20dp"/>

            <TextView
                android:id="@+id/std_gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Gender"
                android:textSize="20dp"
                android:layout_weight="1">
            </TextView>

    </LinearLayout>
             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Number:-"
            android:textSize="20dp"/>
            <TextView
                android:id="@+id/std_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Number"
                android:textSize="20dp">
            </TextView>
             </LinearLayout>
            <TextView
                android:id="@+id/std_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textAlignment="center"
                android:textSize="25dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:layout_below="@+id/Profile_number">
            </TextView>

            <TextView
                android:id="@+id/std_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_below="@+id/Profile_Address">
            </TextView>

            <TextView
                android:text="Academic Details :-"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Profile_Address">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Details"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_School"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="School"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_Board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Board"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_Percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Percentage"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Secondary_Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Year Of Passing"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Higher Secondary Details"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_School"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="School"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_Board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Board"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_Percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Percentage"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_HigherSecondary_Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Year Of Passing"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graduation Details"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id="@+id/std_Graduation_College"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="College"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Graduation_Branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Branch"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:id="@+id/std_Graduation_Enrollmentno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enrollment Number"
                android:textSize="20dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 1"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 2"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 3"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 4"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 5"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 6"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 7"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/std_Graduation_Sem8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Sem 8"
                    android:layout_weight="1">
                </TextView>

                <TextView
                    android:id="@+id/std_Graduation_Year8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Year Of Passing"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <Button
                    android:background="@drawable/login_btn"
                    android:id="@+id/std_CheckResume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check Resume"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/arrow_forward24">
                </Button>

            </LinearLayout>
            </LinearLayout>
    </ScrollView>
    </LinearLayout>


    </RelativeLayout>


