<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.Add_jobs_datacardview"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:text="Comapny email"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editcompanyemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:text="Company name"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editcompanyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="Job Title"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editjobtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="Job Discription"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editjobdiscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="Percentage Criteria"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editpercentagecriteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:text="Salary Range"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editsalaryrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:text="Last Date"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/editlastdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/editjobattachment"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:text="view job attachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/updatejob"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:text="Update data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/deletejob"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:text="Delete Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>