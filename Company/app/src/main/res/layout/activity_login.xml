<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="#00b489"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/happyhireslogo"
            android:foregroundGravity="center">

        </ImageView>
    </LinearLayout>

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/header_login"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Login_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Login"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="40dp"
            android:textStyle="bold|italic"
            android:fontFamily="Poppins"
            android:textColor="@color/introduction">
        </TextView>

    <EditText
        android:id="@+id/Login_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        app:errorTextColor="@color/redTxt"
        app:errorTextAppearance="@color/redTxt"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/text_field"
        android:drawableStart="@drawable/ic_profile"
        android:drawableLeft="@drawable/ic_profile"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:textSize="15sp">
    </EditText>



    <EditText
        android:id="@+id/Login_password"
        app:errorTextColor="@color/redTxt"
        app:errorTextAppearance="@color/redTxt"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        app:passwordToggleEnabled="true"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:drawableStart="@drawable/password_icon"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:textSize="15dp"
        android:hint="Password"
        android:background="@drawable/text_field"
        android:drawableRight="@drawable/show_pass"
        android:drawableEnd="@drawable/show_pass">
    </EditText>


        <android.widget.Button
            android:id="@+id/Login_submit"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:padding="20dp"
            android:text="LOGIN"
            android:textSize="16sp"
            android:drawableRight="@drawable/arrow_forward24" >
        </android.widget.Button>



        <TextView
            android:textStyle="bold|italic"
            android:id="@+id/forgotpassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:layout_marginRight="30dp"
            android:paddingTop="20dp"
            android:text="Forgot Password?"
            android:textSize="15sp"
            android:textColor="#007aff"/>

</LinearLayout>

